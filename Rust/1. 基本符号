fn main() {
    // :: - 双冒号, 用于命名空间分隔
    let s = String::from("hello");  // String::from 是在 String 类型上调用 from 函数
    
    // & - 引用符号
    let r = &s;       // 创建不可变引用
    let mr = &mut s;  // 创建可变引用
    
    // mut - 可变声明
    let mut x = 5;    // 声明可变变量
    
    // -> - 返回值类型指示
    fn add(a: i32) -> i32 { a + 1 }  // 函数返回 i32 类型
    
    // _ - 下划线，用于忽略值
    let _ = 5;        // 忽略这个值
    
    // . - 点操作符，访问方法或属性
    s.len();          // 调用方法
    
    // : - 类型注解
    let x: i32 = 5;   // 显式指定类型
}
